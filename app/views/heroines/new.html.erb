<h2>New Heroine</h2>

<% if !!flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :super_name %>
  <%= f.text_field :super_name %>

  <%= f.label :power %>
  <%= f.collection_select :power_id, @powers, :id, :name %>

  <%= f.submit "Create Heroine" %>
<% end %>
