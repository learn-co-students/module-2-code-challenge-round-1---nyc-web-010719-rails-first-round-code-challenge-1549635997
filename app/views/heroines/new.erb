<h1>Create Heroine: </h1>

<% if !!flash[:errors] %>
  <% flash[:errors].each do |m| %>
    <%= m %>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>
  <%= f.collection_select :power_id, Power.all, :id, :name, {:prompt => "Please Select"} %>
  <%= f.submit %>
<% end %>
